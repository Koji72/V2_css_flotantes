    overflow: hidden; /* Para efectos de borde */
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}
/* Efecto de borde energético */
.mixed-panel::before {
    content: '';
    position: absolute;
    inset: -1px; /* Ligeramente fuera */
    border-radius: var(--radius-corner-cut);
    padding: var(--border-width-medium); /* Ancho del borde */
    background: conic-gradient(from var(--angle, 0deg), transparent 0%, var(--quantum-cyan-glow), var(--quantum-magenta-glow), var(--quantum-cyan-glow), transparent 100%);
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: exclude;
    animation: spin-border 4s infinite linear;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1; /* Detrás del contenido */
}
.mixed-panel:hover::before,
.mixed-panel.is-hovered::before {
    opacity: 1;
}
/* Actualizar ángulo para animación */
@property --angle { syntax: '<angle>'; initial-value: 0deg; inherits: false; }
@keyframes spin-border { to { --angle: 360deg; } }


.mixed-panel[data-interactive-container="true"].is-hovered {
    border-color: var(--nexus-border-accent);
