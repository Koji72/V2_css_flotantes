    background-color: var(--nexus-bg-primary);
    border-radius: var(--radius-sharp); /* Rectas */
    overflow: hidden;
    margin-top: calc(var(--spacing-unit) * 0.5);
    border: var(--border-width-thin) solid var(--nexus-border-secondary);
    box-shadow: var(--inset-shadow-deep);
    position: relative; /* Para pseudo-elementos */
}
/* Efecto rejilla sobre la barra */
.dynamic-progress-bar::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: linear-gradient(45deg, rgba(255,255,255,0.05) 25%, transparent 25%, transparent 75%, rgba(255,255,255,0.05) 75%),
                      linear-gradient(-45deg, rgba(255,255,255,0.05) 25%, transparent 25%, transparent 75%, rgba(255,255,255,0.05) 75%);
    background-size: 8px 8px;
    z-index: 2;
    opacity: 0.7;
}

.dynamic-progress-bar .bar-fill {
    height: 100%;
    border-radius: 0;
    transition: width 0.6s cubic-bezier(0.2, 1, 0.3, 1), background 0.5s ease; /* Transición más elástica */
    box-shadow: none; /* Sin sombra directa, el color da el efecto */
    position: relative;
    z-index: 1;
    /* Flujo de energía animado */
    background-size: 40px 40px;
    background-image: linear-gradient(135deg,
        rgba(255, 255, 255, 0.15) 25%, transparent 25%,
        transparent 50%, rgba(255, 255, 255, 0.15) 50%,
        rgba(255, 255, 255, 0.15) 75%, transparent 75%,
        transparent);
    animation: energy-flow 2s infinite linear;
}

@keyframes energy-flow {
    0% { background-position: 0 0; }
    100% { background-position: 40px 0; }
}

/* Colores y brillos intensos */
.dynamic-progress-bar .bar-fill.ok {
    background-color: var(--quantum-lime-ok);
    box-shadow: 0 0 10px var(--quantum-lime-ok), inset 0 0 5px rgba(255,255,255,0.3);
}
.dynamic-progress-bar .bar-fill.warn {
    background-color: var(--quantum-yellow-warn);
    box-shadow: 0 0 10px var(--quantum-yellow-warn), inset 0 0 5px rgba(255,255,255,0.3);
}
.dynamic-progress-bar .bar-fill.error {
    background-color: var(--quantum-red-error);
    box-shadow: 0 0 10px var(--quantum-red-error), inset 0 0 5px rgba(255,255,255,0.3);
}


/* --- PANELES ::: (Nexus OS Modules) --- */
